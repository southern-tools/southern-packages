#====================
# SYS ADMIN
#====================

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'Do you want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"


#====================
# MODES
#====================

# Set shut down, restart and locking features
bindsym $mod+Delete mode "$mode_system"
set $mode_system [  (l)ock  |  (e)xit  |  (r)eboot  |  (S)hutdown  ]
mode "$mode_system" {
   
    bindsym --release l exec --no-startup-id ~/.user_config/scripts/locker.sh, mode "default"
    #bindsym s exec --no-startup-id sudo /usr/sbin/pm-suspend, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    #bindsym h exec --no-startup-id sudo /usr/sbin/pm-hibernate, mode "default"
    bindsym r exec --no-startup-id bash -c 'pkill -HUP X && sudo /sbin/reboot', mode "default"
	bindsym Shift+s exec --no-startup-id bash -c 'pkill -HUP X && sudo /sbin/halt', mode "default"
    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


