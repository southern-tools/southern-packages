#====================
# BEHAVIOR
#====================

# focus_follows_mouse yes

set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id urxvtc
bindsym $mod+asterisk exec --no-startup-id urxvtc -name floating

# kill focused window
bindsym $mod+Shift+q kill

# start j4-dmenu-desktop
bindsym $mod+d exec --no-startup-id j4-dmenu-desktop --dmenu="dmenu -i -p 'Gentoo Linux' -fn 'Hack:bold:size=10' -nb '$background' -nf '$color14' -sb '$color14' -sf '$background'"

# Start Rofi
# bindsym $mod+d exec --no-startup-id "rofi -show drun \
# -modi drun#ssh \
