# Which workspace on which screen
#workspace number 1:《𝟭》 output eDP1
#workspace number 2:《𝟮》 output eDP1
#workspace number 3:《𝟯》 output eDP1
#workspace number 4:《𝟰》 output eDP1
#workspace number 5:《𝟱》 output eDP1
#workspace number 6:《𝟲》 output eDP1
#workspace number 7:《𝟳》 output eDP1
#workspace number 8:《𝟴》 output eDP1
#workspace number 9:《𝟵》 output eDP1
#workspace number 10:《𝟭𝟬》output HDMI-A-1

# switch to workspace
bindsym $mod+1 workspace number 1:《𝟭》
bindsym $mod+2 workspace number 2:《𝟮》
bindsym $mod+3 workspace number 3:《𝟯》
bindsym $mod+4 workspace number 4:《𝟰》
bindsym $mod+5 workspace number 5:《𝟱》
bindsym $mod+6 workspace number 6:《𝟲》
bindsym $mod+7 workspace number 7:《𝟳》
bindsym $mod+8 workspace number 8:《𝟴》
bindsym $mod+9 workspace number 9:《𝟵》
bindsym $mod+0 workspace number 10:《𝟭𝟬》

# Move to workspace with focused container
bindsym $mod+Shift+1 move container to workspace number 1:《𝟭》; workspace number 1:《𝟭》
bindsym $mod+Shift+2 move container to workspace number 2:《𝟮》; workspace number 2:《𝟮》
bindsym $mod+Shift+3 move container to workspace number 3:《𝟯》; workspace number 3:《𝟯》
bindsym $mod+Shift+4 move container to workspace number 4:《𝟰》; workspace number 4:《𝟰》
bindsym $mod+Shift+5 move container to workspace number 5:《𝟱》; workspace number 5:《𝟱》
bindsym $mod+Shift+6 move container to workspace number 6:《𝟲》; workspace number 6:《𝟲》
bindsym $mod+Shift+7 move container to workspace number 7:《𝟳》; workspace number 7:《𝟳》
bindsym $mod+Shift+8 move container to workspace number 8:《𝟴》; workspace number 8:《𝟴》
bindsym $mod+Shift+9 move container to workspace number 9:《𝟵》; workspace number 9:《𝟵》
bindsym $mod+Shift+0 move container to workspace number 10:《𝟭𝟬》; workspace number 10:《𝟭𝟬》
# Note: workspaces can have any name you want, not just numbers.
# We just use 1-10 as the default.

# navigate workspaces next / previous
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left workspace prev

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    #bindsym $mod+s layout stacking
    #bindsym $mod+w layout tabbed
    #bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # move focus to the parent container
    bindsym $mod+a focus parent

# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+Shift+plus scratchpad show


#====================
# MODES
#====================

# Set shut down, restart and locking features
set $mode_system [ (l)ock | (e)xit | (r)eboot | (S)hutdown | (C)icledown ]
mode "$mode_system" {
    #bindsym l exec "xlock -mode blank -lockdelay 7 -mousemotion", mode "default"
    #bindsym s exec sudo /usr/sbin/pm-suspend, mode "default"
    bindsym e exec swaymsg exit, mode "default"
    #bindsym h exec sudo /usr/sbin/pm-hibernate, mode "default"
    bindsym r exec bash -c 'pkill -HUP X && sudo /sbin/reboot', mode "default"
    bindsym Shift+s exec bash -c 'pkill -HUP X && sudo /sbin/halt', mode "default"
    bindsym Shift+c exec bash -c 'alacritty -e ~/.user_config/scripts/full_sync.sh && pkill -HUP X && sudo /sbin/halt', mode "default"
    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Delete mode "$mode_system"


